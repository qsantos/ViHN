{
    "description": "Vi-style key bindings for browsing Hacker News",
    "author": "Quentin Santos",
    "manifest_version": 3,
    "name": "ViHN",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": [
                "https://news.ycombinator.com/*"
            ],
            "js": [
                "browser-polyfill.min.js",
                "main.js"
            ],
            "css": [
                "main.css"
            ],
            "run_at": "document_end"
        }
    ]
}
