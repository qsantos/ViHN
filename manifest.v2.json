{
    "description": "Vi-style key bindings for browsing Hacker News",
    "author": "Quentin Santos",
    "manifest_version": 2,
    "name": "ViHN",
    "version": "0.0.0",
    "icons": {
        "128": "icon128.png"
    },
    "permissions": ["tabs"],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{4622cacb-93c6-4050-bf6e-749f0237fecb}"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://news.ycombinator.com/*"],
            "js": ["main.js"],
            "css": ["main.css"],
            "run_at": "document_end"
        }
    ]
}
